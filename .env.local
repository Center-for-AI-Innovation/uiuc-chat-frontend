# UIUC Chat Frontend - Local Development Environment Variables
# This file configures the frontend to connect to services running in kind cluster via port forwards
# RENAME THIS FILE TO .env.local.dev

# ====================
# ENVIRONMENT SETTINGS
# ====================
NODE_ENV=development

# ====================
# KEYCLOAK AUTHENTICATION - CRITICAL FOR LOGIN REDIRECT
# ====================
# Keycloak server URL (via port forward) - MUST match the actual Keycloak path
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:55612/auth/
# Keycloak realm name
NEXT_PUBLIC_KEYCLOAK_REALM=illinois_chat_realm
# Keycloak client ID
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=uiuc-chat-client

# ====================
# DATABASE CONFIGURATION
# ====================
# PostgreSQL connection (via port forward)
DATABASE_URL=postgresql://postgres:password@localhost:5432/postgres
DEV_DATABASE_URL=postgresql://postgres:password@localhost:5432/postgres
POSTGRES_DATABASE=postgres
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=password
POSTGRES_ENDPOINT=localhost:5432

# ====================
# BACKEND API CONFIGURATION
# ====================
# Backend API URL (when running backend locally)
NEXT_PUBLIC_API_URL=http://localhost:8001
# Internal API URL for server-side requests
API_URL=http://localhost:8001

# ====================
# VECTOR DATABASE (QDRANT)
# ====================
# Qdrant vector database URL (via port forward)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=dev-key

# ====================
# REDIS CACHE
# ====================
# Redis connection (via port forward)
REDIS_URL=redis://:password@localhost:6379

# ====================
# STORAGE (MINIO S3)
# ====================
# MinIO S3-compatible storage (via port forward)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=uiuc-chat-dev
S3_REGION=us-east-1

# ====================
# MESSAGE QUEUE (RABBITMQ)
# ====================
# RabbitMQ connection (via port forward)
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_MANAGEMENT_URL=http://localhost:15672

# ====================
# LOCAL LLM (OLLAMA)
# ====================
# Ollama API endpoint (via port forward)
OLLAMA_URL=http://localhost:11434

# ====================
# DEVELOPMENT FLAGS
# ====================
# Enable development features
NEXT_PUBLIC_DEV_MODE=true
# Enable verbose logging
NEXT_PUBLIC_DEBUG=true
# Disable some security checks for development
NEXT_PUBLIC_ALLOW_INSECURE=true

# ====================
# APPLICATION CONFIGURATION
# ====================
# Application name
NEXT_PUBLIC_APP_NAME=UIUC Chat
# Base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000
# Enable Illinois Chat specific config
NEXT_PUBLIC_USE_ILLINOIS_CHAT_CONFIG=True

# ====================
# SECURITY
# ====================
# Signing key for JWT tokens (generate a random string for production)
NEXT_PUBLIC_SIGNING_KEY=dev_signing_key_replace_in_production
NEXTAUTH_SECRET=dev_secret_replace_in_production

# ====================
# MONITORING & ANALYTICS
# ====================
# Disable analytics in development
NEXT_PUBLIC_DISABLE_ANALYTICS=true
